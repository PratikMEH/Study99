<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kitab2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ii1"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/daabk2" />

            <TextView
                android:id="@+id/ttl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/ii1"
                android:fontFamily="@font/varela_round"
                android:text="Design Analysis And Algorithm"
                android:textColor="#090000"
                android:textSize="16sp"
                android:textStyle="bold" />
            <RatingBar
                android:id="@+id/rate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ii1"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/ttl1"
                android:isIndicator="true"
                android:rating="4.5"
                android:scaleY=".5"
                android:scaleX=".5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="148dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="10dp"
                android:text="Description"
                android:textColor="#090000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="-1dp"
                android:fontFamily="@font/work_sans"
                android:paddingStart="10dp"
                android:text="Design and Analysis of Algorithms is designed to serve as a textbook for the undergraduate students of computer science engineering and information technology as well as postgraduate students of computer applications. The book aims to empower students with in-depth knowledge of the fundamental concepts and the design, analysis, and implementation aspects of algorithms."
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="324dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="10dp"
                android:text="About The Author"
                android:textColor="#090000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="354dp"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/work_sans"
                android:paddingStart="10dp"
                android:text="Hari Mohan Pandey is a faculty at Edge Hill University, UK. He is specialized in computer science and engineering. His research area includes artificial intelligence, soft computing techniques, natural language processing and machine learning algorithms. He is author of various books in computer science engineering. He has published over 50 research papers in reputed journals and Conferences. He served as editor-in-chief, session chair, served as leading guest editor for the International Journals and delivered keynotes. He has been given the prestigious award “The Global Award for the Best Computer Science Faculty of the Year 2015”, award for completing INDO-US project GENTLE, award (Certificate of Exceptionalism) from the Prime Minister of India and award for developing innovative teaching and learning models"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ata"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="7dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="10dp"
                android:text="Buy This Book"
                android:textColor="#090000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/btb"
                android:background="#6F474242"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/buy21"
                android:background="#6F474242"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/buy22"
                android:background="#6F474242"/>

            <ImageView
                android:id="@+id/fiv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btb"
                app:srcCompat="@drawable/flpkrt" />

            <TextView
                android:id="@+id/amz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/flp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="95dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/varela_round"
                android:text="Amazon"
                android:textColor="#0C0000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/flp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="94dp"
                android:fontFamily="@font/libre_franklin_bold"
                android:text="Rs. 460"
                android:textSize="11sp" />

            <Button
                android:id="@+id/buy21"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/btb"
                android:layout_alignParentStart="true"
                android:layout_marginStart="304dp"
                android:layout_marginTop="14dp"
                android:background="#ED7309"
                android:fontFamily="@font/rubik_medium"
                android:text="Buy Now "
                android:textColor="#fff"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/flp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
                app:srcCompat="@drawable/amz" />

            <TextView
                android:id="@+id/flp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btb"
                android:layout_alignParentStart="true"
                android:layout_marginStart="95dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/varela_round"
                android:text="Flipkart"
                android:textColor="#0C0000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/amz"
                android:layout_alignParentStart="true"
                android:layout_marginStart="95dp"
                android:fontFamily="@font/libre_franklin_bold"
                android:text="Rs. 460"
                android:textSize="11sp" />

            <Button
                android:id="@+id/buy22"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/buy21"
                android:layout_alignParentStart="true"
                android:layout_marginStart="305dp"
                android:layout_marginTop="20dp"
                android:background="#ED7309"
                android:fontFamily="@font/rubik_medium"
                android:text="Buy Now "
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="93dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/libre_franklin_bold"
                android:text="Author: Hari Mohan Pandey"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="92dp"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/libre_franklin_bold"
                android:text="Language: English"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="92dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/libre_franklin_bold"
                android:text="Paper Back: 560"
                android:textSize="11sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>